<h1>User List</h1>
<ul id="user-list">
  <% @users.each do |user| %>
    <li class=<%= user.available? ? "available" : "unavailable" %>>
      <h2><%= user.email %></h2>
      <% if user.available? == false %>
        <span class="return-date">
          Returns: <%= user.returns %>
        </span>
        <p class="message">
          Message: <%= user.message %>
        </p>
      <% end %>
    </li>
  <% end %>
</ul>
